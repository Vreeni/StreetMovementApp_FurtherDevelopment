<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_parkourpark_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_parkourpark_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:lines="5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="#16A085">

        </View>

        <TextView
            android:id="@+id/tv_smc_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center|bottom"
        android:paddingTop="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/btn_inSpotViewTabTrainHere"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryDark"
                android:elevation="10sp"
                android:text="Train here" />

            <Button
                android:id="@+id/btn_inSpotViewTabShareSpot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryDark"
                android:elevation="10sp"
                android:text="Invite others" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>