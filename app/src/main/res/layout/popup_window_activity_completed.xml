<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:weightSum="5"
    android:background="@color/grey_100"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#58C1E8"
        android:text="Activity completed!" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_margin="8dp"
        android:background="#58C1E8">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_activityCompleted_badge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_achievement1"
            app:srcCompat="@drawable/ic_achievement1"
            android:layout_marginLeft="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_activityCompleted_goToProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:text="Personal progress" />

            <Button
                android:id="@+id/btn_activityCompleted_leaderboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:text="Leaderboard rank" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_margin="8dp"
        android:background="#58C1E8">

    </View>


    <Button
        android:id="@+id/btn_activityCompleted_continue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Continue" />


</LinearLayout>

